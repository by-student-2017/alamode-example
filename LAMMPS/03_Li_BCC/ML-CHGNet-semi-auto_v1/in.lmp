units           metal
atom_style      charge
boundary        p p p

read_data       SC222.lammps

replicate 1 1 1

#set type 1 charge +1
#set type 2 charge +3
#set type 3 charge -2

pair_style    chgnet /mnt/d/lammps/src/ML-CHGNET
#pair_style    chgnet/d3 /mnt/d/lammps/potentials/CHGNET
#pair_style    chgnet/gpu /mnt/d/lammps/potentials/CHGNET
#pair_style    chgnet/d3/gpu /mnt/d/lammps/potentials/CHGNET

variable elem string "Li Mn O"

pair_coeff    * *  0.3.0 ${elem}
#pair_coeff    * *  path ./users_model.pt ${elem}

thermo 100
thermo_style custom step time cpu cpuremain lx ly lz press pe temp

velocity all create 300 12345 mom yes rot no

fix 1 all npt temp 300 300 100 iso 0 0 1000

#dump            1 all custom 1 XFSET id xu yu zu fx fy fz 
#dump_modify     1 format float "%20.15f"

dump            d1 all cfg 100 cfg/run.*.cfg mass type xs ys zs id type vx vy vz fx fy fz q
dump_modify     d1 element ${elem}

run             10000

